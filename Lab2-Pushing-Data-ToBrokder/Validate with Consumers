aws configure

REGION="ap-south-1"

aws s3 mb s3://structured-data-172-31-20-80 --region $REGION
aws s3 mb s3://semi-structured-data-172-31-20-80 --region $REGION
aws s3 mb s3://unstructured-data-172-31-20-80 --region $REGION

aws s3 ls
pip3 install kafka-python boto3


